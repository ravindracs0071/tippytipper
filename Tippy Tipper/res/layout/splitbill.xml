<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TableLayout 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_gravity="center"
		android:stretchColumns="*">
		<TableRow>
			<TextView 
				android:textSize="@dimen/enter_bill_amount"
				android:textStyle="bold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/split_bill_amount" />
		</TableRow>
		<TableRow>
			<TextView 
				android:id="@+id/lbl_split_amount"
				android:textSize="@dimen/enter_bill_amount"
				android:gravity="right"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow>
			<TextView 
				android:textSize="@dimen/enter_bill_amount"
				android:textStyle="bold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/split_tip" />
		</TableRow>
		<TableRow>
			<TextView 
				android:id="@+id/lbl_split_tip"
				android:textSize="@dimen/enter_bill_amount"
				android:gravity="right"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow 
			android:background="#FFFFFF"
			android:layout_marginLeft="10sp"
			android:layout_marginRight="10sp"
			android:layout_marginTop="10sp"
			android:layout_marginBottom="10sp"
			android:minHeight="3sp">
			
		</TableRow>
		<TableRow>
			<TextView 
				android:textSize="@dimen/enter_bill_amount"
				android:textStyle="bold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/split_total" />
		</TableRow>
		<TableRow>
			<TextView 
				android:id="@+id/lbl_split_total"
				android:textSize="@dimen/enter_bill_amount"
				android:gravity="right"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow 
			android:background="#777777"
			android:layout_marginLeft="10sp"
			android:layout_marginRight="10sp"
			android:layout_marginTop="10sp"
			android:layout_marginBottom="10sp"
			android:minHeight="3sp">
		</TableRow>
		<TableRow>
			<TextView 
				android:textSize="@dimen/enter_bill_amount"
				android:textStyle="bold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Number of people:" />
		</TableRow>
		<TableRow>
			<TableLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_gravity="center"
				android:stretchColumns="*">
				<TableRow>
					<Button 
						android:id="@+id/btn_remove_person"
						android:textSize="@dimen/calc_button"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="-" />
					<TextView 
						android:id="@+id/lbl_NumberOfPeople"
						android:textSize="@dimen/enter_bill_amount"
						android:gravity="center_horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" 
						android:text="2" />
					<Button 
						android:id="@+id/btn_add_person"
						android:textSize="@dimen/calc_button"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="+" />
				</TableRow>
			</TableLayout>
		</TableRow>
	</TableLayout>
</LinearLayout>