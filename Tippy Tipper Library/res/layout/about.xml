<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
    <ScrollView
        android:layout_weight="1"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>
   	   <LinearLayout
   	       	android:layout_marginLeft="16dp"
   	       	android:layout_marginRight="16dp"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    >
	        <TextView
	            android:id="@+id/lbl_AboutDetails"
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/White"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:lineSpacingExtra="3dp"
	            />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:paddingTop="16dp"
        android:layout_weight="1"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="305dp"
	    >
   	   	<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
   	       	>
	   	    <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/White"
				android:textStyle="bold"
				android:textSize="18sp"
				android:text="@string/app_name"
	            />
	   	    <TextView
	   	        android:id="@+id/lbl_VersionNumber"
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/White"
				android:textStyle="bold"
				android:textSize="18sp"
	            />
   	   </LinearLayout>
   	   <LinearLayout 
   	       	android:layout_marginTop="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
   	       	>
	   	    <Button 
	   	        android:id="@+id/btn_BuyDonateVersion"
	   	        android:minWidth="150dp"
	   	        android:layout_weight="1"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/buy_donate_version"
	   	        android:textSize="12sp"
	   	        />
	   	   	<Button 
	   	   	    android:id="@+id/btn_VisitBryanDennyCom"
	   	   	    android:minWidth="150dp"
	   	   	    android:layout_weight="1"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/visit_bryandenny_com"
	   	        android:textSize="12sp"
	   	        />
	   </LinearLayout>
	   <LinearLayout 
	        android:layout_marginTop="2dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
   	       	>
	   	    <Button 
	   	        android:id="@+id/btn_MoreAppsByDev"
	   	        android:minWidth="150dp"
	   	        android:layout_weight="1"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/more_apps_by_dev"
	   	        android:textSize="12sp"
	   	        />
	   	   	<Button 
	   	   	    android:id="@+id/btn_SourceCodeProject"
	   	   	    android:minWidth="150dp"
	   	   	    android:layout_weight="1"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/source_code_project"
	   	        android:textSize="12sp"
	   	        />
	   </LinearLayout>
    </LinearLayout>
</LinearLayout>